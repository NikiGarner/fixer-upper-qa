{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Your Name:</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="content">Answer:</label>
          {{textarea value=content id="content"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'answserFormShow'}}>New Answer</button>
{{/if}}
