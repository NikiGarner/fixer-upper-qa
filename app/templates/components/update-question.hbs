{{#if updateQuestionForm}}
<h1>Update Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="item">Question</label>
        {{textarea value=item id="item" placeholder=question.item}}
      </div>

      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=question.date}}

      </div>

      <!-- <div class="form-group">
        <label for="avatar">Image URL</label>
        {{input value=avatar id="avatar" placeholder=question.avatar}}
      </div> -->

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
