{{#if updateAnswerForm}}
<h1>Update Answer:</h1>
<h4>{{answer.tile}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Your Name:</label>
        {{input value=name id="name" placeholder=answer.name}}
      </div>

      <div class="form-group">
        <label for="content">Answer:</label>
        {{textarea value=content id="content" placeholder=answer.content}}
      </div>

      <button {{action 'update' answer}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateAnswerForm'}}>Update</button>
{{/if}}
