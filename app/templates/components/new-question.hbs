{{#if addNewQuestion}}
<h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="item">Question</label>
        {{textarea value=item id="item"}}
      </div>

      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}

      </div>

      <div class="form-group">
        <label for="avatar">Image URL</label>
        {{input value=avatar id="avatar"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>Post a new Question</button>
{{/if}}
